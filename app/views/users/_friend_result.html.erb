<div class="row">
  <div class="col-md-6">
    <%= render 'layouts/messages' %>
  </div>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong> Name: </strong> <%= friend.full_name %></td>
            <td><strong> Email: </strong> <%= friend.email %></td>
            <td><strong> Actions: </strong> <%= link_to 'View Profile', '#', class: "btn btn-xs btn-success" %>
            <% if current_user.not_friends_with?(friend.id)%>
              <%= link_to 'Follow friend?', '#', class: "btn btn-xs btn-success", method: :post %>
            <% else %>
              <span class="badge text-bg-light">
                You are Already friends
              </span>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>