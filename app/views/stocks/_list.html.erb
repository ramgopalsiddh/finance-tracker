<div class="row mt-3">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock|%>
          <tr>
            <th scope="row"><%= stock.ticker %></th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td><%= link_to "Remove", user_stock_path(stock), class: "btn btn-sm btn-warning", data: {turbo_method: :delete, "turbo-confirm": "Are you sure?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>